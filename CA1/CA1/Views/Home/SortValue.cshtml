@model IEnumerable<CA1.Order>

@{
    ViewBag.Title = "Sort by Value";
}

@section featured {
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
}



<form method="GET">
    <div class="row" role="form">
        <div class="form-group col-md-2">
            <label for="searchTerm">Search For</label>
            <input type="text" name="searchTerm" class="form-control"/>
        </div>
        <div class="form-group col-md-2">
            <label>&nbsp;</label>
            <input type="submit" value="Search by Name" 
                   class="btn btn-primary form-control"/>
        </div>
    </div>
</form>

<p>
    @Html.ActionLink("Sort by Date", "SortDate")
    @Html.ActionLink("Sort by Value", "SortValue")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>

            @Html.ActionLink("Albums in Order", 
                "AlbumsInOrder", "Album", new {id=item.OrderId}, new {@class="btn btn-info btn-xs"}) |

            
        </td>
    </tr>
}

</table>

